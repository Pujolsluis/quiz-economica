<!DOCTYPE html>
<html lang='en'>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src='http://10.111.0.109:3000/socket.io/socket.io.js'></script>
    <script>
    	var socket = io.connect('http://10.111.0.109:3000');
      var connected = false;
      var username = '';
      var numQuestion = -1;
        
    socket.on('userListPoint', function(data){
        $(".connectedUsers").html('');
        $.each(data.userList, function(i, user){
          $(".connectedUsers").append("<div id='"+user.name+"'>"+user.name+"  -  "+user.correctAnswers+"</div>");
        });
      });

      $(document).ready(function(){
        $('#btnJoin').on('click', function(){
            numQuestion++;
            socket.emit('nextQuestion', numQuestion);
        });

        
      });

    </script>
  </head>
  <body>
    <div class='container-fluid'>
      <div class='row'>
        <div class='span12'>
          <h1>Crisis Economica en Grecia</h1>
        </div>
      </div>
      <div class='row'>
        <div class='span4'>
          <div class='well'>
            <h3>Estudiantes</h3>
            <div class='connectedUsers'>

            </div>
          </div>
        </div>
        <div class='span8'>
          <button id='btnJoin' class='btn btn-primary'>Proxima Pregunta!</button>
        </div>
      </div>
    </div>
  </body>
</html>